extends layout
block content
    div.container
        .colcol-lg-12
            table.table.table-striped.table-hover
                thead
                    tr
                        th ID
                        th NAME
                        th DESCRIPTION
                tbody
                    for category in categories
                        tr
                            td: a.btn.btn-xs.btn-link.text-info(href='/categories/#{category._id}') #{category._id}
                            td #{category.name}
                            td #{category.description}

            button.btn.btn-success(onclick='goBack()') BACK