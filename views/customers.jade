extends layout
block content
    //p #{customers}
    div.container
        .colcol-lg-12
            table.table.table-striped.table-hover
                thead
                    tr
                        th ID
                        th COMPANY NAME
                        th CONTACT NAME
                        th JOB TITLE
                        th PHONE
                        th FAX

                tbody
                    for customer in customers
                        tr
                            td: a.btn.btn-xs.btn-link.text-info(href='/customers/#{customer._id}') #{customer._id}
                            td #{customer.companyName}
                            td #{customer.contactName}
                            td #{customer.contactTitle}
                            td #{customer.phone}
                            td #{customer.fax}

            button.btn.btn-success(onclick='goBack()') BACK